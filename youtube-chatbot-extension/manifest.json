{
  "manifest_version": 3,
  "name": "YouTube 실시간 챗봇",
  "version": "1.0.0",
  "description": "YouTube 실시간 채팅에서 자동 응답하는 챗봇",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [{
    "matches": [
      "*://www.youtube.com/watch*",
      "*://m.youtube.com/watch*"
    ],
    "js": ["test.js", "content.js"],
    "run_at": "document_end"
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube 챗봇 설정"
  },
  
  
  "author": "AI Assistant",
  "homepage_url": "https://github.com"
}